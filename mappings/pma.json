{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "analysis": {
            "analyzer": {
                "ngram_analyzer": {
                    "type": "custom",
                    "tokenizer": "my_tokenizer",
                    "filter": [
                        "lowercase"
                    ]
                }
            },
            "tokenizer": {
                "my_tokenizer": {
                    "type": "ngram",
                    "min_gram": 3,
                    "max_gram": 3,
                    "token_chars": [
                        "letter",
                        "digit"
                    ]
                }
            }
        }
    },
    "mappings": {
        "pma": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "applicant": {
                    "type": "text",
                    "analyzer": "ngram_analyzer"
                },
                "generic_name": {
                    "type": "text"
                },
                "trade_name": {
                    "type": "text"
                }
            }
        }
    }
}